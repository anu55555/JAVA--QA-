
public class Calculator 
{

		public static int add(int firstnumber, int secondnumber) 
		{
			return firstnumber + secondnumber;
		}

		public static int substract(int firstnumber, int secondnumber) 
		{
			return firstnumber - secondnumber;
		}
		public static int divideby2(int firstnumber, int secondnumber) 
		{
			if (firstnumber==secondnumber);
			   return firstnumber/2;
		}
		public static int booleancheck(int firstnumber, int secondnumber, boolean trueorfalse) 
		{
			if (trueorfalse == true )
			{
				
				 if (firstnumber==0 && secondnumber==0) {
					 System.out.println("both numbers are zero"); 
				}
				 else if (secondnumber==0) {
					 System.out.println("the non-zero number is" + " " +  firstnumber);
				 }
				 else if (firstnumber==0) {
					 System.out.println("the non-zero number is" + " " +  secondnumber);
				 }
				 return firstnumber+secondnumber;
			   }
			else {
				
				if (firstnumber==0 && secondnumber==0) {
					 System.out.println("both numbers are zero"); 
				}
				 else if (secondnumber==0) {
					 System.out.println("the non-zero number is" + " " +  firstnumber);
				 }
				 else if (firstnumber==0) {
					 System.out.println("the non-zero number is" + " " +  secondnumber);
				 }
				     return firstnumber*secondnumber;
			}
        }	
		
		public int[] arrayiterator1() 
		{
			int[] array1 = {5,6,19,21,50,55,65,29,28,14};
			return array1;
		}
		public static int arrayiterator2() 
		{
			 int[10] array2= arrayiterator1.array1
				for (int i= 0; i < array2.lenght; i + 2)
					
				{
					return array2[i]+array2[i+1];
				
				}	
		
				
			}
       	
}

